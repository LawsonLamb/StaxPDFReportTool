<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StaxPDFReportTool.app.view.controller.PDFViewer">
   <top>
      <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
        <menus>
          <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="openMenuItem" mnemonicParsing="false" onAction="#openMenuItemAction" text="Open" />
                  <Menu fx:id="exportMenuBar" mnemonicParsing="false" text="Export">
                    <items>
                      <MenuItem fx:id="saveAsImageMenuItem" mnemonicParsing="false" onAction="#saveAsImageMenuItemAction" text="Image" />
                    </items>
                  </Menu>
              <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" onAction="#exitMenuItemAction" text="Exit" />
            </items>
          </Menu>
          <Menu fx:id="viewMenu" mnemonicParsing="false" text="View">
               <items>
                  <MenuItem fx:id="nextPageItem" mnemonicParsing="false" onAction="#nextPageItemAction" text="Next Page" />
                  <MenuItem fx:id="previousPageItem" mnemonicParsing="false" onAction="#previousPageItemAction" text="Previous Page" />
               </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="ALWAYS" pannable="true" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER">
        <content>
          <AnchorPane fx:id="documentPanel">
               <children>
                  <VBox fx:id="imageVBox" spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children></AnchorPane>
        </content>
      </ScrollPane>
   </center>
</BorderPane>
